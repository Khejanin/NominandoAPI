extends default

block content
    div.content
        h1
            | Nominando is a Game about anything you'd like it to be! Play the Game, Name Locations and NPC's, make a photo to make them come to life in your own way!
        h2
            | Rules:
        h2
            | Tap on the screen to interact with the world
        h2
            | Complete quests to advance!
    div.container
        each entity in entities
            div.enemy
                div.enemy-image(style=`background: url('/images/${entity.imagePath}') top center no-repeat; background-size: contain;`)
                h2.enemy-name
                    | #{entity.name}
                h3
                    | Entity
                a(href=`/getEntityInformation?id=${entity.id}`)
                    | View Entity

                div.enemy
        each location in locations
            div.enemy
                div.enemy-image(style=`background: url('/images/${location.imagePath}') top center no-repeat; background-size: contain;`)
                h2.enemy-name
                    | #{location.name}
                h3
                    | Location
                a(href=`/getLocationInformation?id=${location.id}`)
                    | View Location
